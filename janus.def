BootStrap: docker
From: quay.io/fenicsproject/stable:2016.1.0

%post
    apt-get -y update

    rm -rf /tmp/cbcpost
    git clone https://bitbucket.org/simula_cbc/cbcpost.git /tmp/cbcpost
    
    cd /tmp/cbcpost && python setup.py install

    cd /home/fenics/shared
    python2 -m pip install -r requirements.txt

%files
    requirements.txt /home/fenics/shared
    
%environment

%runscript

